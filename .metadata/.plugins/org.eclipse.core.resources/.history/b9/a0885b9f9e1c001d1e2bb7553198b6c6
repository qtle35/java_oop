package codedevl;

import java.util.Scanner;

public class j01009 {
	public static long gt(int n) {
		int res=1;
		for(int i=1;i<=n;i++) {
			res*=i;
		}
		return res;
	}
	public static void main(String[] args) {
		long n,re=0;
		Scanner sc=new Scanner(System.in);
		n=sc.nextLong();
		for(int i=1;i<=n;i++) re+=gt(i);
		System.out.println();
	}
}
